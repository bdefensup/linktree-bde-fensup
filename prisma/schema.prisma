
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified Boolean   @default(false)
  image         String?
  phoneNumber   String?
  role          String    @default("adherent")
  position      String?
  banned        Boolean   @default(false)
  sessions      Session[]
  accounts      Account[]
  
  conversations ConversationParticipant[]
  messages      Message[]
  tickets       Ticket[]
  
  templateFolders TemplateFolder[]
  emailTemplates  EmailTemplate[]
  campaigns       Campaign[]
  emailLogs       EmailLog[]
  passkeys        Passkey[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  date        DateTime
  location    String
  price       Float
  memberPrice Float?
  externalPrice Float?
  isFeatured  Boolean   @default(false)
  
  externalPaymentLink       String?
  externalMemberPaymentLink String?

  maxSeats    Int
  manualRemainingSeats Int?
  image       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]

  @@map("event")
}

model Booking {
  id        String        @id @default(cuid())
  eventId   String
  event     Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  firstName String
  lastName  String
  email     String
  phone     String
  isMember  Boolean       @default(false)
  
  status    BookingStatus @default(PENDING)
  
  revolutLink String?
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  emailLogs EmailLog[]

  sourceCampaignId String?
  sourceCampaign   Campaign? @relation("CampaignBookings", fields: [sourceCampaignId], references: [id], onDelete: SetNull)

  @@index([eventId])
  @@index([email])
  @@index([sourceCampaignId])
  @@map("booking")
}

model Donation {
  id        String   @id @default(cuid())
  amount    Float
  message   String?  @db.Text
  donorName String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  @@map("donation")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  CHECKED_IN
  CHECKED_OUT
}

model Conversation {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastMessageAt DateTime  @default(now())
  
  ticket        Ticket?

  participants  ConversationParticipant[]
  messages      Message[]

  @@map("conversation")
}

model Ticket {
  id             String       @id @default(cuid())
  reference      String?      @unique
  subject        String
  status         TicketStatus @default(OPEN)
  priority       String       @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  
  guestName      String?
  guestEmail     String?
  
  conversationId String       @unique
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  userId         String?
  user           User?        @relation(fields: [userId], references: [id])

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("ticket")
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  conversationId String
  userId         String
  joinedAt       DateTime     @default(now())
  lastReadAt     DateTime     @default(now())
  isPinned       Boolean      @default(false)
  
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@map("conversation_participant")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  content        String       @db.Text
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("message")
}


model TemplateFolder {
  id        String   @id @default(cuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  templates EmailTemplate[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("template_folder")
  @@index([userId])
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String
  subject   String
  content   Json
  
  folderId  String?
  folder    TemplateFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@map("email_template")
  @@index([userId])
  @@index([folderId])
}

model Campaign {
  id        String   @id @default(cuid())
  name      String
  subject   String?
  content   Json?    // Content from template or custom
  attachments Json?  // Array of { url: string, name: string, size: number }
  
  status    String   @default("DRAFT") // DRAFT, SCHEDULED, SENT, ARCHIVED
  
  // Audience
  recipients String[] // Array of emails or tags/segments IDs
  segmentId  String?
  segment    Segment? @relation(fields: [segmentId], references: [id])
  
  // Stats
  sentCount      Int      @default(0)
  deliveredCount Int      @default(0)
  openCount      Int      @default(0)
  clickCount     Int      @default(0)
  bounceCount    Int      @default(0)
  complaintCount Int      @default(0)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  logs      EmailLog[]
  bookings  Booking[] @relation("CampaignBookings")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sentAt    DateTime?
  scheduledAt DateTime?

  @@map("campaign")
  @@index([userId])
}

model EmailLog {
  id          String   @id @default(cuid())
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  bookingId   String?
  booking     Booking?  @relation(fields: [bookingId], references: [id], onDelete: SetNull)

  emailId     String   // Resend Email ID
  recipient   String
  status      String   // sent, delivered, bounced, etc.
  eventType   String   // sent, delivered, open, click, bounce, complaint
  
  ipAddress   String?
  userAgent   String?
  linkClicked String?  // For click events
  
  bounceType    String?  // Permanent, Transient, Undetermined
  bounceSubType String?  // General, NoEmail, Suppressed, MailboxFull, etc.
  bounceMessage String?  // Detailed error message
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@map("email_log")
  @@index([campaignId])
  @@index([emailId])
  @@index([recipient])
  @@index([userId])
}

model UnsubscribedRecipient {
  id        String   @id @default(cuid())
  email     String   @unique
  reason    String?
  createdAt DateTime @default(now())

  @@map("unsubscribed_recipient")
}

model InboxMessage {
  id        String   @id @default(cuid())
  emailId   String   @unique // Resend Email ID (re_...)
  messageId String?  // RFC Message-ID (<...@...>)
  from      String
  to        String[]
  subject   String
  text      String?  @db.Text
  html      String?  @db.Text
  receivedAt DateTime
  isRead    Boolean  @default(false)
  isArchived Boolean @default(false)
  
  attachments Json? // Array of { filename, content_type, size, url? }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inbox_message")
  @@index([emailId])
}

model Contact {
  id        String   @id @default(cuid())
  resendId  String?  @unique // ID from Resend
  email     String   @unique
  firstName String?
  lastName  String?
  unsubscribed Boolean @default(false)
  
  // Custom properties
  properties Json?

  topics    ContactTopic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact")
}

model Segment {
  id        String   @id @default(cuid())
  resendId  String?  @unique
  name      String
  query     Json?    // Rules for dynamic segments

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campaigns Campaign[]

  @@map("segment")
}

model Topic {
  id        String   @id @default(cuid())
  resendId  String?  @unique
  name      String
  description String?
  visibility String  @default("PUBLIC") // PUBLIC, PRIVATE
  isDefault  Boolean @default(false)    // true = Opt-out, false = Opt-in
  
  contacts  ContactTopic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("topic")
}

model ContactTopic {
  id        String   @id @default(cuid())
  contactId String
  topicId   String
  
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  topic     Topic   @relation(fields: [topicId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([contactId, topicId])
  @@map("contact_topic")
}

model Passkey {
  id                    String   @id @default(cuid())
  name                  String?
  publicKey             String
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID          String
  counter               Int
  deviceType            String
  backedUp              Boolean
  transports            String?
  createdAt             DateTime? @default(now())
  aaguid                String?
  
  @@map("passkey")
  @@index([userId])
}
